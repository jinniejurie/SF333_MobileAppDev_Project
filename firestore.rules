rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
		match /disability/{docId} {
      allow read: if true;
      allow write: if false;
      }
		match /interest/{docId} {
      allow read: if true;
      allow write: if false;  // ผู้ใช้ทั่วไปไม่แก้ไข options
    }
    match /friends/{userId}/list/{friendId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null &&
        (request.auth.uid == userId || request.auth.uid == friendId);
    }

    match /chats/{chatId} {
      allow create: if request.auth != null &&
        request.resource.data.participants.hasAny([request.auth.uid]);

      allow read, update: if request.auth != null &&
        resource.data.participants.hasAny([request.auth.uid]);

      match /messages/{messageId} {
        allow read, create, update: if request.auth != null &&
          get(/databases/$(db)/documents/chats/$(chatId))
            .data.participants.hasAny([request.auth.uid]);
      }
    }
    match /posts/{postId} {
  allow read, write: if request.auth != null;

  match /comments/{commentId} {
    allow read, write: if request.auth != null;
  }
}
    
    match /events/{eventId} {
  		allow read: if true;
  		allow write: if request.auth != null;
		}

    match /communities/{communityId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      match /threads/{threadId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}
